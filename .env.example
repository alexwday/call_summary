# Document Chatbot Configuration

# Authentication (choose one)
AUTH_METHOD=api_key  # or oauth
API_KEY=your-openai-api-key-here

# OAuth (if AUTH_METHOD=oauth)
OAUTH_ENDPOINT=https://your-oauth-endpoint/token
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_GRANT_TYPE=client_credentials

# OpenAI Models
LLM_MODEL_SMALL=gpt-4o-mini
LLM_MODEL_MEDIUM=gpt-4o
LLM_MODEL_LARGE=gpt-4o

# Model Parameters (optional)
LLM_TEMPERATURE_MEDIUM=0.7
LLM_MAX_TOKENS_MEDIUM=4000

# Logging
LOG_LEVEL=INFO

# SSL (optional)
SSL_VERIFY=false
SSL_CERT_PATH=